<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
         android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/extra">
    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="10dp"
	        android:textSize="20dp"
	        />
    </LinearLayout>
    <RelativeLayout 
	    android:id="@+id/resolution_rl"
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginTop="5dp"
	    android:focusable="true"
	    android:clickable="true"
	    android:layout_below="@+id/extra"
	    >
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="10dp"
	        android:textSize="20dp"
	        />
	    <TextView 
	        android:id="@+id/resolution_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:textSize="20dp"
	        />
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
	        />
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/fps_rl"
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginTop="10dp"
	    android:focusable="true"
	    android:clickable="true"
	    android:layout_below="@+id/resolution_rl"
	    >
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="10dp"
	        android:textSize="20dp"
	        />
	    <TextView 
	        android:id="@+id/fps_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_centerHorizontal="true"
	        android:textSize="20dp"
	        />
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
	        />
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/quality_rl"
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginTop="10dp"
	    android:layout_below="@+id/fps_rl"
	    android:focusable="true"
	    android:clickable="true"
	    >
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="10dp"
	        android:textSize="20dp"
	        />
	    <TextView 
	        android:id="@+id/quality_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_centerHorizontal="true"
	        android:textSize="20dp"
	        />
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
	        />
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/audio_rl"
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginTop="10dp"
	    android:focusable="true"
	    android:clickable="true"
	    android:layout_below="@+id/quality_rl"
	    >
	    <TextView 
	        android:id="@+id/audio_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="10dp"
	        android:textSize="20dp"
	        />
	    <ImageView 
	        android:id="@+id/audio_iv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:src="@drawable/autologin_off"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
	        />
	</RelativeLayout>
	 <LinearLayout
	      	android:id="@+id/sub"
        	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"  
	    	android:layout_below="@+id/audio_rl"
	    	android:visibility="visible">
    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="10dp"
	        android:textSize="20dp"
	        />
    </LinearLayout>
    <RelativeLayout 
	    android:id="@+id/ex_resolution_rl"
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginTop="5dp"
	    android:focusable="true"
	    android:clickable="true"
	    android:layout_below="@+id/sub"
	    android:visibility="visible"
	    >
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="10dp"
	        android:textSize="20dp"
	    
	        />
	    <TextView 
	        android:id="@+id/ex_resolution_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:textSize="20dp"
	        />
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
	        />
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/ex_fps_rl"
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginTop="10dp"
	    android:focusable="true"
	    android:clickable="true"
	    android:layout_below="@+id/ex_resolution_rl"
	    android:visibility="visible"
	    >
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="10dp"
	        android:textSize="20dp"
	        />
	    <TextView 
	        android:id="@+id/ex_fps_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_centerHorizontal="true"
	        android:textSize="20dp"
	        />
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
	        />
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/ex_quality_rl"
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginTop="10dp"
	    android:layout_below="@+id/ex_fps_rl"
	    android:focusable="true"
	    android:clickable="true"
	    android:visibility="visible"
	    >
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="10dp"
	        android:textSize="20dp"
	        />
	    <TextView 
	        android:id="@+id/ex_quality_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_centerHorizontal="true"
	        android:textSize="20dp"
	        />
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
	        />
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/ex_audio_rl"
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginTop="10dp"
	    android:focusable="true"
	    android:clickable="true"
	    android:layout_below="@+id/ex_quality_rl"
	    android:visibility="visible"
	    >
	    <TextView 
	        android:id="@+id/ex_audio_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="10dp"
	        android:textSize="20dp"
	        />
	    <ImageView 
	        android:id="@+id/ex_audio_iv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:src="@drawable/autologin_off"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
	        />
	</RelativeLayout>

	<RelativeLayout
	    android:id="@+id/display"
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:layout_below="@+id/ex_audio_rl"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginTop="10dp"
	    android:clickable="true"
	    android:focusable="true"
	    android:visibility="gone" >

	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="10dp"
	        android:textSize="20dp" />
	 <TextView 
	        android:id="@+id/display_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:textSize="20dp"
	        />
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="10dp"/>

	 
	</RelativeLayout>

	<include 
	    android:id="@+id/bottom"
	    layout="@layout/save"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:layout_marginBottom="5dp"
	    />
</RelativeLayout>