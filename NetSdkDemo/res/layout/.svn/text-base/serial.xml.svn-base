<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <Button 
        android:id="@+id/open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开"
        android:onClick="onOpen"
        />
    <EditText
	    android:id="@+id/write_et"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/open"/>
	<Button
	    android:id="@+id/send_btn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/write_et"
	    android:onClick="onSend"
	    android:text="发送"/>
	<EditText
	    android:id="@+id/read_et"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/send_btn"/>
	<Button
	    android:id="@+id/rev_btn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/read_et"
	    android:onClick="onRev"
	    android:text="接收"/>
</RelativeLayout>